{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",                      //<– enables TSX/JSX
    "declaration": true,
    "outDir": "dist",
    "strict": true,

    // ←–––––––––– ADD THESE ––––––––––→
    "esModuleInterop": true,                 //<– allow default imports from CJS
    "allowSyntheticDefaultImports": true,    //<– idem
    "moduleResolution": "node",              //<– resolve like Node
    "skipLibCheck": true                     //<– skip checking @types
  },
  "include": ["src"]
}
